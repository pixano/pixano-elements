{
  "compilerOptions": {
    // Code generation options
    "lib": ["es2017", "dom", "dom.iterable"],
    "target": "es2017",
    "experimentalDecorators": true,
    // Static analysis
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    // Build options
    "sourceMap": true, // source maps (useful for debugging the TS source code)
    "declaration": true, // types declarations (idem)
    "skipLibCheck": true,  // don't report errors from dependencies
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
      }
    ]
  },
  "compileOnSave": true,
}